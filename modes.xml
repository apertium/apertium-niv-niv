<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- niv → niv -->

  <mode name="niv-niv" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="niv-niv.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="niv-niv.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="niv-niv.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="niv-niv.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="niv-niv.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-niv-niv.niv-niv.t1x"/>
        <file name="niv-niv.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-niv-niv.niv-niv.t2x"/>
        <file name="niv-niv.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-niv-niv.niv-niv.t3x"/>
        <file name="niv-niv.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="niv-niv.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="niv-niv.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- niv → niv -->

  <mode name="niv-niv" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="niv-niv.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="niv-niv.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="niv-niv.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="niv-niv.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="niv-niv.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-niv-niv.niv-niv.t1x"/>
        <file name="niv-niv.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-niv-niv.niv-niv.t2x"/>
        <file name="niv-niv.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-niv-niv.niv-niv.t3x"/>
        <file name="niv-niv.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="niv-niv.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="niv-niv.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

